<%= render :partial => "/layouts/header" %>

<%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.text_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.text_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
<% end %>
